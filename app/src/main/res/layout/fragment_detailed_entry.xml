<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/entry_fragment"
    android:clickable="true"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/date_entry_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/total_fruits_text_detailed_entry_fragment"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/total_fruits_entry_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/total_fruits_text_detailed_entry_fragment"
        app:layout_constraintStart_toStartOf="@+id/total_fruits_text_detailed_entry_fragment"
        app:layout_constraintTop_toBottomOf="@+id/total_fruits_text_detailed_entry_fragment" />

    <TextView
        android:id="@+id/total_vitamins_entry_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/recycler_view_detailed_fragment"
        app:layout_constraintEnd_toEndOf="@+id/total_vitamins_text_detailed_entry"
        app:layout_constraintStart_toStartOf="@+id/total_vitamins_text_detailed_entry"
        app:layout_constraintTop_toBottomOf="@+id/total_vitamins_text_detailed_entry"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_detailed_fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_vitamins_entry_fragment" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/on_add_new_fruit_detailed_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:maxImageSize="@android:dimen/app_icon_size"
        app:backgroundTint="@color/colorPrimaryDark"
        app:elevation="0dp"
        app:fabSize="normal"
        android:elevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_baseline_add_24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/total_vitamins_text_detailed_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="@string/total_vitamins_consumed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_fruits_text_detailed_entry_fragment"
        app:layout_constraintTop_toBottomOf="@+id/date_entry_fragment" />

    <TextView
        android:id="@+id/total_fruits_text_detailed_entry_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="@string/total_number_of_fruits"
        app:layout_constraintEnd_toStartOf="@+id/total_vitamins_text_detailed_entry"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_entry_fragment" />

    <Button
        android:id="@+id/save_detailed_entry"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rounded_corners"
        android:clickable="true"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/select_amount"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
